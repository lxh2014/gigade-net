    <br />
    <h3>工作代號： <span class="label label-info">@ViewBag.number</span></h3>
    <br />
<div class="row">
    <div class="col-lg-8">
        <div class="alert alert-danger" id="alert" hidden="hidden" role="alert">
            <h4 class="glyphicon glyphicon-exclamation-sign" id="MessageContentId">提示</h4>
        </div>
    </div>
