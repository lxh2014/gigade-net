              if (result.success)
              {
                  if (result.data > 0)
                  {
                      document.location.href = "/MarketTally/MarketTallyWD?number=" + number;
                  }
                  else
                  {
                      $('#MessageContentId').text("工作代號("+number+")中沒有寄倉商品!");
                      $('#alert').show();
                      $("#number").focus()
                  }
              }
              
          }).error(function ()
          {
              $('#MessageContentId').text("查詢失敗!");
              $('#alert').show();
              $("#number").focus()
          })

